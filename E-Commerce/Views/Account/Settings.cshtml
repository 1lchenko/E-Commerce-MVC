@using ECommerce.Models.IdentityModels.ResetPassword;

 

@{
    if (!ViewBag.IsConfirm)
    {
        <div style="margin-top:40px" class="login-form">
            <a href="~/Account/ConfirmEmail">Confirm Email</a>
            <div class="form-text">After place check your email and use instruaction to confirm</div>
        </div>
    }
    else
    {
        <div style="margin-top:40px" class="login-form">
           <p style="color:white">Your Email Is Confirmed</p>
        </div>
    }
}

 
<form style="margin-top:40px" asp-action="UpdatePassword" method="get" class="login-form">
    <div style="display: flex; justify-content:start; align-items: center; margin-top:10px;">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>

</form>
