@using ECommerce.Models.Home;
@model Category

<div class="container">
    <form class="form-add-product" asp-action="AddCategory" asp-controller="Category" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Category Name</label>
            <input type="text" asp-for="CategoryName" class="form-control" id="Name" placeholder="Smartphones">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        
          <span style="display: flex; justify-content: center; align-items: center; margin-top: 40px">
             
               <button style="margin-right:15px;" type="submit" class="btn btn-warning">Create</button>
                    <a class="btn btn-primary " href="~/Category/GetAllCategories">Go Back</a>
            </span>
    </form>
</div>